@using Microsoft.AspNetCore.Http;
@model MoodApp.Models.UsersModel;
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Yetki Atama</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Auth</a></li>
              <li class="breadcrumb-item active">AssignRole</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
      <section class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-12">
            <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Eklenecek Kullanıcı</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
                <div class="card-body">
                @{
                    if (ViewBag.ErrorMessage is string)
                    {
                      <div class="alert alert-danger alert-dismissible">
                          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                          <h5><i class="icon fas fa-ban"></i> Uyarı !</h5>
                          @ViewBag.ErrorMessage
                      </div>   
                    }
                    if (ViewBag.SuccesMessage is string)
                    {
                      <div class="alert alert-success alert-dismissible">
                          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                          <h5><i class="icon fas fa-check"></i> Başarılı !</h5>
                          @ViewBag.SuccesMessage
                      </div>   
                    }
                }
                        <form method="post" enctype="multipart/form-data" asp-controller="Auth" asp-action="AddUser">
                        <label asp-for="txtUsername"></label> : <br>
                        <input class="form-control" asp-for="txtUsername" data-val-required="Üye adı boş geçilemez !" data-val-maxlength="Üye adı 255 karakterden fazla olamaz" data-val-minlength="Üye adı 5 karakterden az olamaz"> <br>
                        <span asp-validation-for="txtUsername"></span><br>

                        <label asp-for="txtPassword"></label> : <br>
                        <input class="form-control" asp-for="txtPassword" data-val-required="Şifre boş geçilemez !"> <br>
                        <span asp-validation-for="txtPassword"></span><br>

                        <label asp-for="roleId"></label> : <br><select class="form-control" asp-for="roleId" asp-items=@Model.roles data-val-required="Rol seçimi boş geçilemez !"></select>
                        <span asp-validation-for="roleId"></span>
                        <br><input type="submit" class="btn btn-block btn-outline-success" value="Kaydet"/>
                        </form>
                </div>
            </div>
            </div>
          </div>
        </div>
